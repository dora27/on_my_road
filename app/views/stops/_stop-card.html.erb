<% passenger = stop.user %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-offset-4">
    <% if passenger.photo %>
     <%= cl_image_tag passenger.photo.path, class: "avatar-large" %>
     <% end %>
    </div>
    <div class="col-xs-12 col-md-offset-3">
      <h4><%= passenger.first_name + " " + passenger.last_name %></h4>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-offset-2">
        <p class= "message-position message-style">"<%= stop.message %>"</p>
    </div>
  </div>
</div>

<%= render 'status-color', stop: stop %>
