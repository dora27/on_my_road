<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Dashboard text link -->
      <%= link_to "Mes trajets", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.path, height: 200, width: 200, crop: :fit, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <% avatar_url = current_user.facebook_picture_url || current_user.photo.path.presence || "http://placehold.it/30x30" %>
            <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user, tab: "profile") do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Button trigger modal -->
      <button type="button" class="navbar-wagon-item navbar-wagon-link" data-toggle="modal" data-target="#login">
        Log In
      </button>

      <!-- Modal -->
      <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabellogin">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabellogin">Ravi de vous revoir On The Road</h4>
            </div>
            <div class="modal-body">
            <%= render "devise/sessions/new", resource: resource, resource_name: resource_name, resource_class: User %>
            </div>
          </div>
        </div>
      </div>

      <!-- popup Sign In NOT WORKING -->
      <!-- Button trigger modal -->
      <button type="button" class="navbar-wagon-item navbar-wagon-link" data-toggle="modal" data-target="#signin">
        Sign up
      </button>

      <!-- Modal -->
      <div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="myModalLabelsignin">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabelsignin">Bienvenue On The Road</h4>
            </div>
            <div class="modal-body">
            <%= render "devise/registrations/new", resource: resource, resource_name: resource_name, resource_class: User %>
            </div>
          </div>
        </div>
      </div>

      <!-- Log In text link -->
      <%#= link_to t(".sign_in", default: "Log In"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Sign Up text link -->
      <%#= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>

    <!-- Button (call-to-action) -->
    <%#= link_to t(".top_call_to_action", default: "Post stuff"), "#", class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">

      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

