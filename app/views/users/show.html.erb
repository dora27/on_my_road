<% content_for :meta_title, "#{@user.name} is on #{DEFAULT_META["title"]}" %>
<% content_for :meta_description, @user.description %>
<% content_for :meta_description, cloudinary_url(@user.photo.path) %>

<div id="dashboard">
  <div id="dashboard-menu">
    <%= render "tabs" %>
  </div>
  <div id="dashboard-content">
    <%= render "tab-content", active_tab: "home" %>
  </div>
</div>

<%= content_for :after_js do %>
  <script>
  // inspect params
  $(document).ready(function() {
  // if paramt=ab
    <% if params[:tab] == "profile" %>
  // simulate click on corresponding tab
      $("#home").removeClass('active');
      $("#home").addClass('hidden');
      $("#profile").removeClass('hidden');
      $("#profile").addClass('active');
      <% end %>
   });
  </script>
<% end %>
