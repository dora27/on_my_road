  $(".accept-request").on("click", function(){
    var newPassenger = $('div.passenger-photo[data-id="'+ $(this).data("id") +'"]')
    $('.car-people').append(newPassenger);
    newPassenger.children().removeClass();
    newPassenger.children().addClass("avatar-large");
  });

  </script>
<% end %>
